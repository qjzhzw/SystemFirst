<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>空调租赁用户界面</title>
    <link href="base.css" rel="stylesheet">
    <link href="platform.css" rel="stylesheet">
</head>
<body>
<div class="container">
    <div id="pf-hd">
        <div class="pf-logo">
            <img src="imgs/main/logo.png" alt="logo">
            <h1 class="system-name">空调租赁用户界面</h1>
        </div>

        <ul class="pf-nav">
            <li class="pf-nav-item current">
                <a href="/user">
                    <span class="pf-nav-icon project-icon"></span>
                    <span class="pf-nav-title">租赁缴费</span>
                </a>
            </li>
            <li class="pf-nav-item">
                <a href="/history">
                    <span class="pf-nav-icon static-icon"></span>
                    <span class="pf-nav-title">查询历史</span>
                </a>
            </li>
            <li class="pf-nav-item">
                <a href="/userinfo">
                    <span class="pf-nav-icon manger-icon"></span>
                    <span class="pf-nav-title">用户信息</span>
                </a>
            </li>
        </ul>


        <div class="pf-user">
            <div class="pf-user-photo">
                <img src="imgs/main/user.png" alt="">
            </div>
            <h4 class="pf-user-name ellipsis">&nbsp;&nbsp;User</h4>
            <i class="iconfont xiala">&#xe618;</i>

            <div class="pf-user-panel">
                <ul class="pf-user-opt">
                    <li>
                        <a href="/userinfo">
                            <i class="iconfont">&#xe606;</i>
                            <span class="pf-opt-name">用户信息</span>
                        </a>
                    </li>
                    <li class="pf-modify-pwd">
                        <a  href="/passchange">
                            <i class="iconfont">&#xe613;</i>
                            <span class="pf-opt-name">修改密码</span>
                        </a>
                    </li>
                    <li class="pf-logout">
                        <a href="/">
                            <i class="iconfont">&#xe60e;</i>
                            <span class="pf-opt-name">退出</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div id="pf-bd">
            <div id="pf-sider">
                <h2 class="pf-model-name">
                    <span class="pf-sider-icon"></span>
                    <span class="pf-name">项目</span>
                </h2>

                <ul class="sider-nav">
                    <li class="current">
                        <a href="/user">
                            <img src="imgs/main/l03.png">
                            <span class="sider-nav-title">租赁缴费</span>
                            <i class="iconfont">&#xe611;</i>
                        </a>
                    </li>
                </ul>
            </div>

            <div id="pf-page">
                <div class="container">
                    <div id="inner-hd">
                        <div class="crumbs">
                            <i class="crumbs-arrow"></i>
                            <a class="crumbs-label">租赁缴费</a>
                        </div>
                    </div>

                    <div id="inner-bd">
                        <form id="roch_form" action="/userchange" method="post">
                            <div class="button-group">
                                <button type="submit" onclick="return change()" class="button current add" style="vertical-align: middle;">
                                    <i class="iconfont">&#xe76a;</i>
                                    <span class="button-label">保存</span>
                                </button>

                                <a href="user">
                                    <button type="button" class="button current add" style="vertical-align: middle;">
                                        <i class="iconfont">&#xe76a;</i>
                                        <span class="button-label">取消</span>
                                    </button>
                                </a>
                            </div>

                            <table class="kv-table">
                                <tbody>
                                <tr>
                                    <td class="kv-label">
                                        用户名：
                                    </td>
                                    <td class="kv-content" style="padding: 10px;">
                                        <%= username %>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="kv-label">
                                        宿舍号：
                                    </td>
                                    <td id="rochange" class="kv-content" style="padding: 10px;">
                                        <select name="dong1" style="width: 45px;height: 30px; margin-left: 5px;">
                                            <option value="0">&nbsp;0</option>
                                            <option value="1">&nbsp;1</option>
                                            <option value="2">&nbsp;2</option>
                                            <option value="3">&nbsp;3</option>
                                            <option value="4">&nbsp;4</option>
                                            <option value="5">&nbsp;5</option>
                                            <option value="6">&nbsp;6</option>
                                            <option value="7">&nbsp;7</option>
                                            <option value="8">&nbsp;8</option>
                                            <option value="9">&nbsp;9</option>
                                        </select>
                                        <select name="dong2" style="width: 45px;height: 30px;">
                                            <option value="0">&nbsp;0</option>
                                            <option value="1">&nbsp;1</option>
                                            <option value="2">&nbsp;2</option>
                                            <option value="3">&nbsp;3</option>
                                            <option value="4">&nbsp;4</option>
                                            <option value="5">&nbsp;5</option>
                                            <option value="6">&nbsp;6</option>
                                            <option value="7">&nbsp;7</option>
                                            <option value="8">&nbsp;8</option>
                                            <option value="9">&nbsp;9</option>
                                        </select>
                                        楼
                                        <select name="ceng" style="width: 45px;height: 30px;">
                                            <option value="1">&nbsp;1</option>
                                            <option value="2">&nbsp;2</option>
                                            <option value="3">&nbsp;3</option>
                                            <option value="4">&nbsp;4</option>
                                            <option value="5">&nbsp;5</option>
                                            <option value="6">&nbsp;6</option>
                                        </select>
                                        层
                                        <select name="shi1" style="width: 45px;height: 30px;">
                                            <option value="0">&nbsp;0</option>
                                            <option value="1">&nbsp;1</option>
                                            <option value="2">&nbsp;2</option>
                                            <option value="3">&nbsp;3</option>
                                        </select>
                                        <select name="shi2" style="width: 45px;height: 30px;">
                                            <option value="0">&nbsp;0</option>
                                            <option value="1">&nbsp;1</option>
                                            <option value="2">&nbsp;2</option>
                                            <option value="3">&nbsp;3</option>
                                            <option value="4">&nbsp;4</option>
                                            <option value="5">&nbsp;5</option>
                                            <option value="6">&nbsp;6</option>
                                            <option value="7">&nbsp;7</option>
                                            <option value="8">&nbsp;8</option>
                                            <option value="9">&nbsp;9</option>
                                        </select>
                                        室
                                        </a>
                                        <span id="span4"></span>
                                    </td>
                                </tr>

                                </tbody>

                            </table>
                        </form>
                    </div>

                    <div id="inner-ft">

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    function change(){
        var d1 = document.forms["roch_form"]["dong1"].value;
        var d2 = document.forms["roch_form"]["dong2"].value;
        var s1 = document.forms["roch_form"]["shi1"].value;
        var s2 = document.forms["roch_form"]["shi2"].value;

        if(d1==0&&d2==0){
            $("#span4").html('<font color=red style="margin-left: 10px;">楼号不能为零!</font>');
            return false;
        }else if(s1==0&&s2==0){
            $("#span4").html('<font color=red style="margin-left: 10px;">宿舍不能为零!</font>');
            return false;
        }else{$("#span4").html('');}
    }
</script>
<script type="text/javascript" src="/javascripts/jquery-3.1.1.min.js"></script>
<script type="text/javascript" src="/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
</body>
</html>
